<div>
  <h1>List name: <%= @list.name %></h1>
  <p><%= link_to 'Edit your list', edit_list_path(@list.id) %></p>
  <p><%= link_to 'Delete', list_path(@list.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
  <p><%= link_to "Create bookmarks",  new_list_bookmark_path(@list.id) %></p>
</div>

<div>
  <% if @list.photo.key != nil  %>
    <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
    <div class="card-category"
      style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>')">
      Cool article
    </div>
  <% end %>
</div>

<div>
  <% @list.bookmarks.each do |bookmark| %>
    <p><%= bookmark.movie.title %></p>
    <p><%= bookmark.movie.overview %></p>
    <p><%= bookmark.movie.rating %></p>
    <%= link_to "delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want delete ?"} %>
  <% end %>
</div>

<h1>List</h1>


<%= link_to 'Edit', edit_list_path(@list.id) %>
<%= link_to 'Delete', list_path(@list.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}

<%= link_to "Create bookmarks",  new_list_bookmark_path(@list.id) %>


<% @list.movies.each do |movie| %>

  <p><%= movie.title %></p>
  <p><%= movie.overview %></p>
  <p><%= movie.rating %></p>
<% end %>

<%= link_to 'Go Back', lists_path %>
